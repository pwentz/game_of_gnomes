.admin-page-wrap
  = form_for(@gnome, url: admin_gnome_path) do |t|
    = t.label :name
    = t.text_field :name

    = t.label :desc
    = t.text_field :desc

    = t.label :price
    = t.text_field :price

    = t.label :category
    = t.select :category, Category.all.map {|p| p.name }

    = t.file_field :image

    = t.submit "Update item", :class => "button"
