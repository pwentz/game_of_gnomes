%h5 Welcome

.container
  .row.vertical-offset-100
    .col-md-4.col-md-offset-4.login
      .panel.panel-default
        .panel-heading
          .row-fluid.user-row
            %img.img-responsive#mushroom{:alt => "Gnome", :src => "https://pixabay.com/static/uploads/photo/2014/04/02/10/47/red-304538_960_720.png"}/
        .panel-body
        %fieldset.login-form
          %label.panel-login
            .login_result
            %h5 Create a new account
            = form_for(@user) do |f|
              = f.text_field :username, :class => "form-control", :placeholder => "Username"
              = f.password_field :password, :class => "form-control", :placeholder => "Password"
              = f.email_field :email, :class => "form-control", :placeholder => "Email address"
              = f.text_field :country_code, :class => "form-control", :placeholder => "Country code", id: "authy-countries"
              = f.text_field :phone_number, :class => "form-control", :placeholder => "Phone number", id: "authy-cellphone"
              %br/
              = f.submit "Create Account", :class => "btn btn-success btn-lg btn-block"
